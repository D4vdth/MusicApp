<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="MusicApp.MainWindow"
        Title="Music Player" Height="450" Width="800">
    <Grid Margin="10">
        <!-- Columnas: Lista de pistas | Área de reproducción -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Lista de canciones -->
        <ListBox x:Name="TracksListBox"
             Grid.Column="0"
             DisplayMemberPath="Title"
             SelectedIndex="0"
             Margin="0,10,10,207"
             SelectedItem="{Binding SelectedSong}">
        </ListBox>
        <ListView ItemsSource="{Binding Songs}" 
                  Height="200" 
                  Margin="0,214,10,0" 
                  SelectionChanged="ChangeSong" 
                  SelectedItem="{Binding SelectedSong, Mode=TwoWay}"
                  HorizontalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="2" Padding="8" CornerRadius="10" Background="#FFF1F1F1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- <Image Source="/Assets/music-note.png" Width="24" Height="24" Margin="5" /> -->

                            <StackPanel Grid.Column="1" Margin="10,0">
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="10"/>
                                <TextBlock Text="{Binding Duration}" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>



        <!--<Button Content="Load Songs" Click="LoadDemoSongs" Margin="111,355,121,21"/>-->

        <!-- Panel de reproducción -->
        <StackPanel Grid.Column="1">
            <!-- Elemento de medios invisible para audio -->
            <MediaElement x:Name="MediaPlayer"
                    LoadedBehavior="Manual"
                    UnloadedBehavior="Stop"
                    Stretch="Uniform"
                    Height="281"
                    Visibility="Visible"/>

            <!-- Controles de reproducción -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button Content="Open" Width="50" Click="Open"/>
                <Button Content="⏮" Width="50" Click="PrevButton_Click" Margin="5,0"/>
                <Button Content="▶️" Width="50" Click="PlayButton_Click" Margin="5,0"/>
                <Button Content="⏸️" Width="50" Click="PauseButton_Click" Margin="5,0"/>
                <Button Content="⏹️" Width="50" Click="StopButton_Click" Margin="5,0"/>
                <Button Content="⏭" Width="50" Click="NextButton_Click" Margin="5,0"/>
            </StackPanel>

            <!-- Slider de progreso -->
            <Slider x:Name="progressSlider"
              Minimum="0"
              Value="0"
              ValueChanged="PositionSlider_ValueChanged"
              IsMoveToPointEnabled="True"
              VerticalAlignment="Bottom"/>

            <!-- Barra de progreso visual -->
            <ProgressBar x:Name="ProgressBar"
                   Minimum="0"
                   Maximum="100"
                   Height="10"
                   Margin="0,5,0,10"/>

            <!-- Control de volumen -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Vol:" VerticalAlignment="Center"/>
                <Slider x:Name="VolumeSlider"
                Minimum="0" Maximum="1"
                Value="0.5"
                Width="150"
                IsMoveToPointEnabled="True"
                ValueChanged="VolumeSlider_ValueChanged"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>