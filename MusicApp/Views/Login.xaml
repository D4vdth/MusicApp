<Window x:Class="MusicApp.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inicio de Sesión" Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Window.Resources>
        <Style x:Key="InputStyle" TargetType="Control">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="Auto"/>
            <!-- Usuario Label -->
            <RowDefinition Height="Auto"/>
            <!-- Usuario Input -->
            <RowDefinition Height="Auto"/>
            <!-- Contraseña Label -->
            <RowDefinition Height="Auto"/>
            <!-- Contraseña Input -->
            <RowDefinition Height="Auto"/>
            <!-- Botón -->
            <RowDefinition Height="Auto"/>
            <!-- Link registro -->
        </Grid.RowDefinitions>

        <TextBlock Text="MusicApp - Login"
                   Grid.Row="0"
                   FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,25"/>

        <TextBlock Text="Nombre de Usuario:"
                   Grid.Row="1" FontSize="14"/>

        <TextBox x:Name="UsernameTextBox"
                 Grid.Row="2" Style="{StaticResource InputStyle}"/>

        <TextBlock Text="Contraseña:"
                   Grid.Row="3" FontSize="14"/>

        <PasswordBox x:Name="PasswordBox"
                     Grid.Row="4" Style="{StaticResource InputStyle}"/>

        <Button Content="Ingresar"
                Grid.Row="5"
                Width="348" Height="40"
                HorizontalAlignment="Center"
                Click="LoginButton_Click"
                FontSize="16" FontWeight="SemiBold"
                Background="#4CAF50" Foreground="White"
                BorderBrush="#388E3C" BorderThickness="1"
                Cursor="Hand" Margin="0,0,0,10">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#66BB6A"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#388E3C"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <TextBlock Grid.Row="6" HorizontalAlignment="Center" FontSize="14">
            <Run Text="¿No tienes cuenta? "/>
            <Run Text="Regístrate"
                 Foreground="Blue" TextDecorations="Underline"
                 Cursor="Hand" MouseDown="RegisterButton_Click"/>
        </TextBlock>
    </Grid>
</Window>
